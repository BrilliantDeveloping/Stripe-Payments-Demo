<script>  
var count =3  
var redirect="<%= root_path %>"
  
function countDown(){  
 if (count <=0){  
  window.location = redirect;  
 }else{  
  count--;  
  document.getElementById("timer").innerHTML = "This page will redirect in "+count+" seconds."  
  setTimeout("countDown()", 1000)  
 }  
}  
</script>  

<div class="thanks">
  Thank you for!
</div>

<span id="timer" style="display:none;">  
<script>  
 countDown();  
</script>  
</span>  
