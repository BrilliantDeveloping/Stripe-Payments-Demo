<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
  <div class="input-group field">
    <span class="input-group-addon"><%= glyph('user') %></span>
    <%= f.email_field :email, placeholder: 'Email', autofocus: true, class: 'form-control' %>
  </div>
  <div class="input-group field">
    <span class="input-group-addon"><%= glyph('lock') %></span>
    <%= f.password_field :password, placeholder: 'Password', autocomplete: "off", class: 'form-control' %>
  </div>
  <div class="input-group field">
    <span class="input-group-addon"><%= glyph('lock') %></span>
    <%= f.password_field :password_confirmation, placeholder: 'Confirm', autocomplete: "off", class: 'form-control short-input' %> <%= f.submit "Sign up", class: 'btn btn-warning pull-right' %>
  </div>

<% end %>
